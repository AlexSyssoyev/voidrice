#!/bin/sh


[ "$(stat -c %y ~/.cache/nofap >/dev/null | cut -d' ' -f1 )" != "$(date '+%Y-%m-%d')" ] && curl -Ls 'https://tracker.nofap.com/xf/badge/294204' > ~/.cache/nofap

days="$(grep Day ~/.cache/nofap | awk -F'>' '{print $5}' | sed "s/tspan// ; s/<\/// ; s/ Day//" || grep Day ~/.cache/nofap | awk -F'>' '{print $5}' | sed "s/tspan// ; s/<\/// ; s/ Days//" )"

printf "üßî$days"
case $BLOCK_BUTTON in
	1) setsid -f brave https://forum.nofap.com/index.php;;
	2) curl -Ls 'https://tracker.nofap.com/xf/badge/294204' > ~/.cache/nofap && pkill -RTMIN+21 dwmblocks ;;
	3) notify-send "üêª Nofap module" "\- La racha comenzo el 21/09/2020.
- Click central para actualizar el archivo.
- Quedan $((1095-$days)) Dias para alcanzar los 3 a√±os. " ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
