#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vols="$(pamixer --sink alsa_output.pci-0000_00_14.2.analog-stereo --get-volume)"
volh="$(pamixer --sink alsa_output.pci-0000_00_01.1.hdmi-stereo --get-volume)"


if [ "$vols" -gt "70" ]; then
	icons="ðŸ”Š"
elif [ "$vols" -lt "30" ]; then
	icons="ðŸ”ˆ"
else
	icons="ðŸ”‰"
fi

if [ "$volh" -gt "70" ]; then
	iconh="ðŸ”Š"
elif [ "$volh" -lt "30" ]; then
	iconh="ðŸ”Š"
else
	iconh="ðŸ”‰"
fi

echo "$icons$vols% $iconh$volh%"
