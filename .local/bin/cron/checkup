#!/bin/sh

# Syncs repositories and downloads updates, meant to be run as a cronjob.
ping -q -c 1 example.org > /dev/null || exit
#su kredik -c 'notify-send -t 3000 " Sincronizaci贸n del repositorio" "Buscando actualizaciones de los paquetes..."'
pacman -Syyuw --noconfirm || su kredik -c 'notify-send -t 3000 "Error descargando los paquetes.

Revise su conexi贸n a internet, si pacman esta funcionando ya, o intente una actualizaci贸n manual para ver los errores."'

pkill -RTMIN+8 "${STATUSBAR:-dwmblocks}"

if pacman -Qu | grep -v "\[ignored\]"
then
	su kredik -c 'notify-send -t 3000 " Sincronizaci贸n del repositorio" "Actualizaciones disponibles. Presionar en el icono de la  barra de estado () para actualizar."'
#else
#su kredik -c 'notify-send -t 3000 " Sincronizaci贸n del repositorio"  "Sincronizaci贸n completa. No hay nuevos paquetes para actualizar."'
fi
