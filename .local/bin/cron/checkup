#!/bin/sh
# Syncs repositories and downloads updates, meant to be run as a cronjob.
ping -q -c 1 example.org > /dev/null || exit
pacman -Syyuw --noconfirm || su kredik -c 'notify-send -t 3000 "Error descargando los paquetes.

#Revise su conexi칩n a internet, si pacman esta funcionando ya, o intente una actualizaci칩n manual para ver los errores."'
pkill -RTMIN+8 "${STATUSBAR:-dwmblocks}"
if pacman -Qu | grep -v "\[ignored\]"
then
	su kredik -c 'notify-send -t 3000 "游꾸 Sincronizaci칩n del repositorio" "Actualizaciones disponibles. Presionar en el icono de la  barra de estado (游닍) para actualizar."'
fi
